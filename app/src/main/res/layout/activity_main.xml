<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnViewHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看历史备份记录"
            android:layout_gravity="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择加密密钥"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/rgKeyType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbDefaultKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认密钥"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/rbCustomKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义密钥"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layoutCustomKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="8dp"
            android:background="#FAFAFA">

            <EditText
                android:id="@+id/etCustomKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入密钥"
                android:inputType="textPassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="或者选择密钥文件:"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnSelectKeyFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择密钥文件"/>

            <Button
                android:id="@+id/btnCreateKeyFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建密钥文件"
                android:layout_marginStart="8dp"/>
            
            <TextView
                android:id="@+id/tvSelectedKeyFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未选择文件"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择下列功能"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnSelectDirectory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择工作文件夹 (Source/Dest)"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/tvSelectedDirectory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未选择文件夹"
            android:gravity="center"
            android:padding="8dp"
            android:background="#F0F0F0"/>

        <Button
            android:id="@+id/btnFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="过滤文件 (可选)"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvFilterStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未启用过滤 - 备份所有文件"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#666666"/>

        <Button
            android:id="@+id/btnSelectBackupFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择已备份文件 (用于恢复)"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvSelectedBackupFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未选择文件"
            android:gravity="center"
            android:padding="8dp"
            android:background="#F0F0F0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnBackup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始备份"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btnRestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始恢复"/>
        </LinearLayout>
        
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="已就绪"/>

        <TextView
                android:id="@+id/tvProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text=""/>

    </LinearLayout>
</ScrollView>